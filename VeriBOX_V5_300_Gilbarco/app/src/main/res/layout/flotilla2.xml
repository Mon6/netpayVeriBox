<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="@dimen/imagen_gnr"
                    android:layout_height="@dimen/imagen_gnr"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/home"
                    android:onClick="fin"
                    android:textSize="40dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="@dimen/boton_opc"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:onClick="fin"
                        android:text="VENTA FLOTILLA"
                        android:textSize="@dimen/boton_opc_letra" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/imagen_gnr"
                    android:layout_height="@dimen/imagen_gnr"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pos" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="32"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/num_pos" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tamano_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#d8cfcf"
                        android:text="FLOTILLA: 000000"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/tamano_40" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="#d8cfcf"
                        android:text="USUARIO: ******"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/tamano_40" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="#d8cfcf"
                        android:text="DISP.: $-----.--"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/tamano_40" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.29">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tamano_20"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="match_parent"
                                android:layout_height="53dp"
                                android:onClick="onRadioButtonClicked"
                                android:text="LITROS"
                                android:textSize="@dimen/tamano_40" />

                            <RadioButton
                                android:id="@+id/radio2"
                                android:layout_width="match_parent"
                                android:layout_height="53dp"
                                android:layout_marginTop="@dimen/tamano_30"
                                android:onClick="onRadioButtonClicked"
                                android:text="DINERO"
                                android:textSize="@dimen/tamano_40" />

                        </RadioGroup>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/strXYmsj"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/tamano_20"
                        android:text="$ "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/tamano_80" />

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="#d8cfcf"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:nextFocusDown="@id/editText1"
                        android:nextFocusForward="@id/editText1"
                        android:nextFocusLeft="@id/editText1"
                        android:nextFocusRight="@id/editText1"
                        android:nextFocusUp="@id/editText1"
                        android:textSize="@dimen/tamano_80">

                        <requestFocus />
                    </EditText>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="LITROS"
                        android:textSize="@dimen/tamano_50" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tamano_20"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/teclado5"
                            android:layout_width="@dimen/imagen_gnr_t"
                            android:layout_height="@dimen/tamano_80"
                            android:background="@drawable/teclado"
                            android:onClick="teclado" />

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="@dimen/imagen_gnr_t"
                            android:layout_height="@dimen/imagen_gnr_t"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/tamano_20"
                            android:background="@drawable/check"
                            android:onClick="flotilla4"
                            android:textSize="50sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tamano_20"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="100dp"
                            android:layout_weight="1"
                            android:text="ODOMETRO"
                            android:textSize="@dimen/tamano_60" />

                        <Button
                            android:id="@+id/teclado6"
                            android:layout_width="@dimen/imagen_gnr_t"
                            android:layout_height="@dimen/tamano_80"
                            android:layout_marginLeft="@dimen/tamano_90"
                            android:layout_weight="1"
                            android:background="@drawable/teclado"
                            android:onClick="teclado" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextOD"
                            android:layout_width="500dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#d8cfcf"
                            android:gravity="center"
                            android:inputType="number"
                            android:nextFocusDown="@id/editTextOD"
                            android:nextFocusForward="@id/editTextOD"
                            android:nextFocusLeft="@id/editTextOD"
                            android:nextFocusRight="@id/editTextOD"
                            android:nextFocusUp="@id/editTextOD"
                            android:textSize="@dimen/tamano_70" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/tamano_20"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/button"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="@dimen/tamano_20"
                                android:layout_weight="1"
                                android:background="@drawable/check"
                                android:onClick="sig_pag" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tamano_20">

                <Button
                    android:id="@+id/button22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:onClick="cambio_nip"
                    android:text="Cambiar NIP"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="almacen"
                    android:text="VENTA TIENDA"
                    android:textSize="@dimen/tamano_40" />

            </FrameLayout>


        </LinearLayout>

        <!--
        <TextView
            android:id="@+id/strXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp" />
        -->

    </FrameLayout>

</LinearLayout>