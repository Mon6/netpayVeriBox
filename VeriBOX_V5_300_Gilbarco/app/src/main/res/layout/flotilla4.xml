<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_70" >

        <Button
            android:id="@+id/button4"
            android:layout_width="@dimen/layout_50"
            android:layout_height="@dimen/layout_50"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home"
            android:textSize="@dimen/textSize_20"
            android:onClick="fin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button5"
                android:layout_width="@dimen/layout_300"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:onClick="fin"
                android:text="VENTA FLOTILLA"
                android:textSize="@dimen/textSize_30" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="@dimen/layout_120"
        android:layout_height="@dimen/layout_120"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView16"
        android:textSize="@dimen/textSize_15"
        android:layout_gravity="center_horizontal" />

</LinearLayout>