<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.00">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.00">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="0.00" >

                <Button
                    android:id="@+id/button4"
                    android:layout_width="@dimen/imagen_gnr"
                    android:layout_height="@dimen/imagen_gnr"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/home"
                    android:onClick="fin"
                    android:textSize="40dp" />

                <LinearLayout
                    android:layout_width="790dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.02"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="@dimen/boton_opc"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:onClick="fin"
                        android:text="TIENDA"
                        android:textSize="@dimen/boton_opc_letra" />
                </LinearLayout>

                <TextView
                    android:id="@+id/strXYmsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="TOTAL:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="50sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:id="@+id/textView32" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:id="@+id/textView33" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TOTAL: $ 0.00"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/tamano_90" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.00"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cant."
                            android:textColor="@android:color/black"
                            android:textSize="40dp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginRight="150dp"
                            android:text="Código:"
                            android:textColor="@android:color/black"
                            android:textSize="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal" >

                        <EditText
                            android:id="@+id/editText1"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textColor="@android:color/black"
                            android:textSize="25dp"
                            android:nextFocusDown="@id/editText2"
                            android:nextFocusForward="@id/editText2"
                            android:nextFocusLeft="@id/editText2"
                            android:nextFocusRight="@id/editText2"
                            android:nextFocusUp="@id/editText2" />

                        <EditText
                            android:id="@+id/editText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="13"
                            android:textColor="@android:color/black"
                            android:textSize="25dp"
                            android:nextFocusDown="@id/editText1"
                            android:nextFocusForward="@id/editText1"
                            android:nextFocusLeft="@id/editText1"
                            android:nextFocusRight="@id/editText1"
                            android:nextFocusUp="@id/editText1" />

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="@dimen/imagen_gnr"
                            android:layout_height="@dimen/imagen_gnr"
                            android:layout_marginLeft="30dp"
                            android:onClick="mas"
                            android:textSize="25dp"
                            android:background="@drawable/mas" />

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cant:"
                        android:textColor="@android:color/black"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=" Código:"
                        android:textColor="@android:color/black"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Descripción: "
                        android:textColor="@android:color/black"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="P. Unitario: "
                        android:textColor="@android:color/black"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Monto:"
                        android:textColor="@android:color/black"
                        android:textSize="30dp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="@dimen/imagen_gnr"
                        android:layout_height="@dimen/imagen_gnr"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/check"
                        android:onClick="ok" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="845dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/Button01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="tck"
                        android:text="TICKET"
                        android:textSize="@dimen/tamano_50" />

                    <Button
                        android:id="@+id/Button02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_weight="1"
                        android:onClick="factura"
                        android:text="FACTURA"
                        android:textSize="@dimen/tamano_50" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/strXY" />
        -->

    </FrameLayout>


</LinearLayout>