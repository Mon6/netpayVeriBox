<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <Button
                    android:id="@+id/button_g"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/back"
                    android:onClick="fin"
                    android:textSize="50dp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.23"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="GERENTE"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="90dp" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/vis_ser1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:text="Fuera de Servicio"
                            android:textSize="40dp" />

                        <Spinner
                            android:id="@+id/spinner1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:textAlignment="center" />

                        <Button
                            android:id="@+id/button16"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="TODAS"
                            android:onClick="cam1"
                            android:textSize="40dp" />

                        <EditText
                            android:id="@+id/editText1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:text="99"
                            android:textSize="40dp">

                            <requestFocus />
                        </EditText>

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/check"
                            android:onClick="fuera_ser"
                            android:textSize="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vis_ser2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:text="En Servicio"
                            android:textSize="40dp" />

                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />

                        <Button
                            android:id="@+id/button17"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:onClick="cam2"
                            android:text="TODAS"
                            android:textSize="40dp" />

                        <EditText
                            android:id="@+id/editText2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="40dp" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/check"
                            android:onClick="en_ser"
                            android:textSize="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/visTurno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:text="Cambio de Turno"
                            android:textSize="40dp" />

                        <Spinner
                            android:id="@+id/spinner4"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />

                        <Button
                            android:id="@+id/button18"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:onClick="cam3"
                            android:text="T1"
                            android:textSize="40dp" />

                        <Spinner
                            android:id="@+id/spinner3"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />

                        <Button
                            android:id="@+id/button19"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:onClick="cam4"
                            android:text="TODAS"
                            android:textSize="40dp" />

                        <EditText
                            android:id="@+id/editText3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="40dp" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/check"
                            android:onClick="cambio_turno"
                            android:textSize="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/visTan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="450dp"
                            android:layout_height="wrap_content"
                            android:text="Inventario de Tanques"
                            android:textSize="40dp" />

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="300dp"
                            android:background="@drawable/check"
                            android:onClick="corte_tanque"
                            android:textSize="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/visRec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:text="Colecta Parcial"
                            android:textSize="40dp" />

                        <Button
                            android:id="@+id/button20"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:onClick="cam5"
                            android:text="TODAS"
                            android:textSize="40dp" />

                        <EditText
                            android:id="@+id/editText4"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="40dp" />

                        <Button
                            android:id="@+id/button21"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/check"
                            android:onClick="corte_turno"
                            android:textSize="40dp" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <Button
                    android:id="@+id/button_c"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/conf"
                    android:onClick="conf" />

            </RelativeLayout>

        </LinearLayout>

        <!---
        <TextView
            android:id="@+id/strXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="30sp" />
         -->

    </FrameLayout>

</LinearLayout>