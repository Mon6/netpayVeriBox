<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >



        <LinearLayout
            android:id="@+id/vis_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button1"
                    android:layout_width="@dimen/imagen_gnr"
                    android:layout_height="@dimen/imagen_gnr"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/back"
                    android:onClick="fin"
                    android:textSize="@dimen/letra_user1" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="OPERADORES"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/letra_user1" />

                <Button
                    android:id="@+id/button100"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/guardar"
                    android:onClick="guardar"
                    android:textSize="@dimen/letra_user1"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/cambia_ar"
                        android:onClick="menos5" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/cambia_ab"
                        android:onClick="mas5" />
                </LinearLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/user_vis1"
                                android:layout_width="600dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:lines="1"
                                android:maxLength="25"
                                android:onClick="met1"
                                android:text="User1"
                                android:textSize="@dimen/letra_user1" />

                            <RadioButton
                                android:id="@+id/user_vis2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:maxLength="25"
                                android:onClick="met2"
                                android:text="User2"
                                android:textSize="@dimen/letra_user1" />

                            <RadioButton
                                android:id="@+id/user_vis3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:maxLength="25"
                                android:onClick="met3"
                                android:text="User3"
                                android:textSize="@dimen/letra_user1" />

                            <RadioButton
                                android:id="@+id/user_vis4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:maxLength="25"
                                android:onClick="met4"
                                android:text="User4"
                                android:textSize="@dimen/letra_user1" />

                            <RadioButton
                                android:id="@+id/user_vis5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:lines="1"
                                android:maxLength="25"
                                android:onClick="met5"
                                android:text="User5"
                                android:textSize="@dimen/letra_user1" />

                        </LinearLayout>

                    </LinearLayout>


                </RadioGroup>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView001"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="25"
                        android:text="888"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/letra_user1" />

                    <TextView
                        android:id="@+id/textView002"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:ems="10"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="25"
                        android:text="888"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/letra_user1" />

                    <TextView
                        android:id="@+id/textView003"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:ems="10"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="25"
                        android:text="888"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/letra_user1" />

                    <TextView
                        android:id="@+id/textView004"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:ems="10"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="25"
                        android:text="888"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/letra_user1" />

                    <TextView
                        android:id="@+id/textView005"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:ems="10"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="25"
                        android:text="888"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/letra_user1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/mas"
                        android:focusable="true"
                        android:onClick="mas"
                        android:textSize="@dimen/letra_user1" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/eliminar"
                        android:onClick="elimina"
                        android:textSize="@dimen/letra_user1" />

                    <Button
                        android:id="@+id/button25"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/lector"
                        android:onClick="rev_lectores" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vis_alta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALTA DE OPERADOR"
                    android:textSize="@dimen/letra_user1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp" >

                <TextView
                    android:id="@+id/strXYmsj"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:text="CLAVE OPERADOR:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/tamano_50" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:nextFocusDown="@id/editText1"
                    android:nextFocusForward="@id/editText1"
                    android:nextFocusLeft="@id/editText1"
                    android:nextFocusRight="@id/editText1"
                    android:nextFocusUp="@id/editText1"
                    android:text=""
                    android:textSize="50dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp" >

                <Button
                    android:id="@+id/button7"
                    android:layout_width="@dimen/imagen_gnr"
                    android:layout_height="@dimen/imagen_gnr"
                    android:background="@drawable/back"
                    android:onClick="atras2" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="@dimen/imagen_gnr"
                    android:layout_height="@dimen/imagen_gnr"
                    android:layout_marginLeft="210dp"
                    android:background="@drawable/check"
                    android:onClick="guarda" />

            </LinearLayout>


        </LinearLayout>

        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/strXY" />
        -->

    </FrameLayout>
</LinearLayout>